{
    "compilerOptions": {
        "lib": ["ES6", "DOM"],
        "target": "ES6",
        "moduleResolution": "bundler",
        "module": "ES6",
        "strict": true,
        "noImplicitAny": true,
        "declaration": false,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "outDir": "dist"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}